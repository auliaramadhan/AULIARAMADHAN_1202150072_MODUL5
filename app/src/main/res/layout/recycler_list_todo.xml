<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/namakegiatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jalan jalan"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    <TextView
        android:id="@+id/kegiatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jalan kemana aja"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_below="@+id/namakegiatan"/>

    <TextView
        android:id="@+id/prior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/namakegiatan"
        android:layout_alignBottom="@+id/namakegiatan"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:text="Priority"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

    <TextView
        android:id="@+id/priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/prior"
        android:layout_alignTop="@+id/kegiatan"
        android:layout_marginEnd="17dp"
        android:text="21"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

</RelativeLayout>